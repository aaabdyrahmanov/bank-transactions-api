{
  "root": true,
  "env": {
    "commonjs": true,
    "es2021": true
  },
  "extends": ["standard", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "ignorePatterns": ["**/*.spec.js", "**/*.test.js"],
  "plugins": ["prettier"],
  "rules": {
    "eqeqeq": "off",
    "camelcase": "off",
    "class-methods-use-this": "off",
    "consistent-return": "off",
    "no-console": "off",
    "no-use-before-define": "off"
  }
}
